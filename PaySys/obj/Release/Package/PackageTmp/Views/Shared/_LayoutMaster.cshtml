            {



                <nav class="nav-horizontal">
                    <div class="container-fluid">

                        @if (Convert.ToString(Session["picture"]).Length > 0)
                        {
                            <img src="~/EmployeeProfile/@Convert.ToString(Session["picture"])" alt="No Profile Pic" style="max-height:100px;max-width:100px;margin-left:-17%"> <br />

