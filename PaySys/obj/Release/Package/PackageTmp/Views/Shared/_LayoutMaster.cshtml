            {

                <nav class="nav-horizontal">
                    <div class="container-fluid">

                        @if (Convert.ToString(Session["picture"]).Length > 0)
                        {
                            <img src="~/EmployeeProfile/@Convert.ToString(Session["picture"])" alt="No Profile Pic" style="max-height:10%;max-width:10%;margin-left:-17%"> <br />

                        }


                        <ul class="menu" style="@Convert.ToString(Session["control"])">

                            <li>
                                <a href="~/Home/index"><i class="ico fa fa-home"></i><span>Dashboard</span></a>
                            </li>

                            <li class="has-sub">
                                <a href="#"><i class="ico fa fa-envelope"></i><span>My Applications</span></a>
