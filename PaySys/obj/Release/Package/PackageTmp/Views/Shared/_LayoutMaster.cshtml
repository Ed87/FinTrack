            <div class="pull-left">
                <div class="logo">
                    <img src="~/assets/images/logo-mihr.png" alt="">
                </div>

            </div>
            <section id="login">
                <form action="~/User/Logout" id="logoutForm" method="post">
                    <div class="userinfo Fiado">

                        <div>
                            Welcome! <b>
                                <a href="~/Employee/EmployeeDetail/@Convert.ToString(Session["UserId"])" title="My Account">
                                        @Helpers.TitleCaseString(Session["Username"].ToString())
                                        [
                                        @Helpers.TitleCaseString(Session["JobTitle"].ToString())
                                        ]

                                    </a>
                            </b>
                        </div>
                        <span>
                            <span>
                            </span>
                            <a href="~/User/ChangePassword">
                                <img src="~/assets/images/ChangePassword.png" title="Change Password" width="16" height="16" />
                            </a>
                            <a href="javascript:document.getElementById('logoutForm').submit()" class="view-main-site">Log off</a>

                        </span><ins></ins>
                    </div>
                </form>
            </section>


