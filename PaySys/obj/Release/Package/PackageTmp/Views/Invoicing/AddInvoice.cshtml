@model PaySys.Models.Invoice
@{
    ViewBag.Title = "AddInvoice";
    Layout = "~/Views/Shared/_LayoutPageh.cshtml";
}

<h2>AddInvoice</h2>

<div class="form-horizontal">
    
   
    <div class="space-4"></div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-facebook">Invoice Reference Number</label>

        <div class="col-sm-9">
            <span class="input-icon">
                @Html.EditorFor(model => model.ReferenceNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ReferenceNumber, "", new { @class = "text-danger" })
            </span>
        </div>
    </div>
   
   

    <div class="space-4"></div>
    @*</div>*@

  
    <div class="space-4"></div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-facebook">Actual Amount</label>

        <div class="col-sm-9">
            <span class="input-icon">
                @Html.EditorFor(model => model.ActualAmount, new { htmlAttributes = new { @class = "form-control", @min = "1" } })
                @Html.ValidationMessageFor(model => model.ActualAmount, "", new { @class = "text-danger" })
            </span>
        </div>
    </div>

   
    <div class="space-4"></div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-facebook">Quantity</label>

        <div class="col-sm-9">
            <span class="input-icon">
                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
            </span>
        </div>
    </div>


</div>