@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
            $('#Units').change(function () {
                var ddlValue = $(this).val();
                if (ddlValue == "1" || ddlValue == "2" || ddlValue == "3" || ddlValue == "4" || ddlValue == "5" || ddlValue == "6") {
                    $('#dpts').show();

                }
                else  {

                    $('#dpts').hide();
                }
            });
        });
    </script>
    <script type="text/javascript">
        $('#UnitId').change(function () {
            var selectedUnit = $("#UnitId").val();
            var departmentSelect = $('#DepartmentId');
                departmentSelect .empty();
            if (selectedUnit != null && selectedUnit != '') {
                $.getJSON('@Url.Action("GetDepartmentsByUnit")', { UnitId: selectedUnit }, function (departments) {
                    if (departments != null && !jQuery.isEmptyObject(departments))
                        {

                            departmentSelect.append($('<option/>', {
                                value: null,
                                text: "Select Department"
                            }));
                        $.each(departments, function (index, department) {
                            departmentSelect.append($('<option/>', {
                                value: department.Value,
                                text: department.Text
                                }));
                            });
                        };
                    });
                }
            });
    </script>
